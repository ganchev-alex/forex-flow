<Window x:Class="ForexFlow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ForexFlow"
        mc:Ignorable="d"
        Title="Forexflow" Height="625" Width="385" MinHeight="624" MaxHeight="625" MinWidth="385" MaxWidth="385"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10,0,10,-6">
        <Image HorizontalAlignment="Center" Height="67" Margin="0,68,0,0" VerticalAlignment="Top" Width="308" Source="/Assets/Logo.png"/>
        <TextBox x:Name="Subtitle" Margin="81,123,0,0" TextWrapping="Wrap" Text="Fast &amp; Accurate Currency Conversion on the Go." VerticalAlignment="Top" FontFamily="Bahnschrift SemiBold" TextAlignment="Right" BorderBrush="White" FontSize="16" FontWeight="Bold" Foreground="Black" IsEnabled="False" HorizontalAlignment="Left" Width="255" />
        <Button x:Name="CurrencyMangement" Content="Currency Management" HorizontalAlignment="Center" Margin="0,222,0,0" VerticalAlignment="Top" Height="49" Width="276" BorderBrush="#005771FF" Foreground="White" Background="#FF5771FF" FontFamily="Bahnschrift SemiBold" BorderThickness="1,1,1,1" Click="CurrencyMangement_Click" FontSize="18"/>
        <Button x:Name="AmountsManagement" Content="Amounts Management" HorizontalAlignment="Center" Margin="0,280,0,0" VerticalAlignment="Top" Height="49" Width="276" BorderBrush="#005771FF" Foreground="White" Background="#FF5771FF" FontFamily="Bahnschrift SemiBold" BorderThickness="1,1,1,1" Click="AmountsMangement_Click" FontSize="18"/>
        <Button x:Name="InvoiceManagement" Content="Invoice Management" HorizontalAlignment="Center" Margin="0,337,0,0" VerticalAlignment="Top" Height="49" Width="276" BorderBrush="#005771FF" Foreground="White" Background="#FF5771FF" FontFamily="Bahnschrift SemiBold" BorderThickness="1,1,1,1" FontSize="18" Click="InvoiceManagement_Click"/>
        <TextBlock x:Name="Paragraph1" HorizontalAlignment="Center" Height="40" Margin="0,520,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="358" TextAlignment="Center" FontFamily="Bahnschrift Light" Foreground="#FF989898" FontSize="14" Text="This demo project was assigned as a course work by:"/>
        <TextBlock x:Name="Paragraph2" HorizontalAlignment="Center" Height="26" Margin="0,544,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="308" TextAlignment="Center" FontFamily="Bahnschrift SemiBold" Foreground="Black" FontSize="18" Text="Technical University, Sofia"/>

    </Grid>
</Window>
